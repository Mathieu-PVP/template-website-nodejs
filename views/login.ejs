<%- include('./layouts/header.ejs') %>

        <div class="container">

            <% if (messages.error) { %>
            <div class="alert alert-danger" role="alert">
                <p><%= messages.error %></p>
            </div>
            <% } %>

            <% if (messages.success) { %>
            <div class="alert alert-success" role="alert">
                <p><%= messages.success %></p>
            </div>
            <% } %>

            <h2 class="text-center">Se connecter</h2>

            <form method="post" action="/auth/login" class="shadow-sm p-3 mb-5 bg-body-tertiary rounded">
                <div class="mb-3">
                    <label for="email" class="form-label">Adresse e-mail</label>
                    <input type="email" class="form-control" aria-describedby="emailHelp" name="email"
                        value="<%= email %>">
                    <div class="form-text">Nous ne partagerons jamais vos informations personnelles.</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" class="form-control" name="password" value="<%= password %>">
                </div>
                <button type="submit" class="btn btn-primary">Se connecter</button>
                <div class="form-text">Pas de compte ? <a href="/auth/register" alt="S'enregistrer">Enregistrez-vous</a> dès maintenant.</div>
                <div class="form-text">Mot de passe perdu ? <a href="/auth/forgot-password" alt="Réinitialiser mot de passe">Réinitialisez-le</a> dès maintenant.</div>
            </form>

        </div>

    <%- include('./layouts/footer.ejs') %>